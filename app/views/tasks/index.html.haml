.container
  .task_index
    %h1= @board.title
    - @tasks.each do |task|
      = link_to board_task_path(@board,task.id) do
        .task
          - if task.eyecatch.attached?
            .task_image
              = image_tag task.eyecatch
          .task_content
            .task_title
              = task.title
            .task_detail
              = task.content
            .task_bottom
              .task-card_avatar
                = image_tag 'Oval.png', class: 'task-avatar'
              .comment-count
    = link_to new_board_task_path(@board) do
      .Add_btn
        %i.fa.fa-plus Add new task
