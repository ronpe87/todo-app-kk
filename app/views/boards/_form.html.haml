.container
  %ul
  - @board.errors.full_messages.each do |message|
    %li= message
  %h2.Page_title New Board
  = form_with(model: board, local: true) do |f|
    %div
      = f.label :title, 'Name', class:'label1'
    %div
      = f.text_field :title, class:'text1'
    %div
      = f.label :content, 'Description', class:'label2'
    %div
      = f.text_area :content
    = f.submit 'Submit', class: 'btn-primary'
